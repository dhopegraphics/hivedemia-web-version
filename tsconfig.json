{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
   "paths": {
      "@/*": [
        "./*",
        "../*", 
        "app/*",
      ]
    }
  },
 "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "app/_layout.jsx",
    "app/index.jsx",
    "app/*",
    "context/*",
    "lib/*",
    "Context/*",
    "hooks/*",
    "utils/*",
    "constants/*",
    "components/*",
    "nativewind-env.d.ts",
    "data/*",
    "assets/*",
    "backend/*",
  ]
}